{
  "name": "monorepo-vm",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "check-types": "turbo run check-types",
     "generate:db":"cd packages/db && bunx prisma generate",
     "start:web": "cd apps/web && next start",
     "start:backend": "cd apps/http-server && bun run src/index.ts",
     "start:websocket": "cd apps/web-socket && bun run src/index.ts"
     
  },
  "devDependencies": {
    "prettier": "^3.6.2",
    "turbo": "^2.5.6",
    "typescript": "5.9.2"
  },
  "engines": {
    "node": ">=18"
  },
  "packageManager": "bun@1.2.22",
  "workspaces": [
    "apps/*",
    "packages/*"
  ]
}
